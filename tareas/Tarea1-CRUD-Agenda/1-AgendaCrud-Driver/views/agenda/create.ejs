<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">
        <%= title %>
    </h2>

    <form action="/create" method="post" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="nombres" class="block text-sm font-medium text-gray-700 mb-2">Nombres:</label>
                <input type="text" name="nombres" placeholder="Nombres" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
                <label for="apellidos" class="block text-sm font-medium text-gray-700 mb-2">Apellidos:</label>
                <input type="text" name="apellidos" placeholder="Apellidos" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
        </div>

        <div>
            <label for="fecha_nacimiento" class="block text-sm font-medium text-gray-700 mb-2">Fecha de
                Nacimiento:</label>
            <input type="date" name="fecha_nacimiento" required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div>
            <label for="direccion" class="block text-sm font-medium text-gray-700 mb-2">Dirección:</label>
            <input type="text" name="direccion" placeholder="Dirección" required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="celular" class="block text-sm font-medium text-gray-700 mb-2">Celular:</label>
                <input type="text" name="celular" placeholder="Celular" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
                <label for="correo" class="block text-sm font-medium text-gray-700 mb-2">Correo:</label>
                <input type="email" name="correo" placeholder="Correo" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
        </div>

        <div class="flex space-x-4 pt-4">
            <button type="submit"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded transition duration-200">
                Crear Agenda
            </button>
            <a href="/"
                class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded transition duration-200">
                Cancelar
            </a>
        </div>
    </form>
</div>