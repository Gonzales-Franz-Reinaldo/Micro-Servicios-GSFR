<div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Lista de Usuarios</h2>
    <% if (users && users.length> 0) { %>
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border p-2">ID</th>
                    <th class="border p-2">Name</th>
                    <th class="border p-2">Email</th>
                    <th class="border p-2">Registration Date</th>
                    <th class="border p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td class="border p-2">
                            <%= user.id %>
                        </td>
                        <td class="border p-2">
                            <%= user.nombre %>
                        </td>
                        <td class="border p-2">
                            <%= user.email %>
                        </td>
                        <td class="border p-2">
                            <%= new Date(user.created_at).toLocaleDateString() %>
                        </td>
                        <td class="border p-2">
                            <a href="/users/show/<%= user.id %>" class="text-blue-500 hover:underline">Ver</a>
                            <a href="/users/edit/<%= user.id %>" class="text-green-500 hover:underline ml-2">Editar</a>
                            <form action="/users/delete/<%= user.id %>" method="POST" class="inline"
                                onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
                                <button type="submit" class="text-red-500 hover:underline ml-2">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <% } else { %>
            <p>No hay usuarios.</p>
            <% } %>

    <div class="mt-4">
        <a href="/users/create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Crear nuevo usuario</a>
    </div>
</div>