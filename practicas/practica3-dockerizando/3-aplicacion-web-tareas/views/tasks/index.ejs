<h1 class="text-2xl font-bold mb-4">Lista de Tareas</h1>
<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow">
        <thead class="bg-gray-100">
            <tr>
                <th class="py-3 px-4 text-left text-sm font-semibold">Título</th>
                <th class="py-3 px-4 text-left text-sm font-semibold">Descripción</th>
                <th class="py-3 px-4 text-left text-sm font-semibold">Estado</th>
                <th class="py-3 px-4 text-left text-sm font-semibold">Fecha de Creación</th>
                <th class="py-3 px-4 text-left text-sm font-semibold">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% tareas.forEach(tarea=> { %>
                <tr class="border-t border-gray-200 hover:bg-gray-50">
                    <td class="py-3 px-4 text-sm">
                        <span class="font-medium">
                            <%= tarea.titulo %>
                        </span>
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-600">
                        <%= tarea.descripcion %>
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-500">
                        <%= tarea.estado %>
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-500">
                        <%= tarea.fechaCreacion.toLocaleDateString() %>
                    </td>
                    <td class="py-3 px-4 text-sm">
                        <div class="flex space-x-2">
                            <a href="/tareas/<%= tarea._id %>"
                                class="bg-blue-500 text-white px-3 py-1 rounded text-xs">Ver</a>
                            <a href="/tareas/<%= tarea._id %>/editar"
                                class="bg-yellow-500 text-white px-3 py-1 rounded text-xs">Editar</a>
                            <form action="/tareas/<%= tarea._id %>?_method=DELETE" method="POST" class="inline">
                                <button type="submit"
                                    class="bg-red-500 text-white px-3 py-1 rounded text-xs">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>