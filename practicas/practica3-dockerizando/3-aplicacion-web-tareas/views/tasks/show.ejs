<% layout('layouts/main') %>
    <h1 class="text-2xl font-bold mb-4">
        <%= tarea.titulo %>
    </h1>
    <div class="bg-white p-4 rounded shadow max-w-md">
        <p class="text-gray-600"><strong>Descripci√≥n:</strong>
            <%= tarea.descripcion %>
        </p>
        <p class="text-gray-600"><strong>Estado:</strong>
            <%= tarea.estado %>
        </p>
        <p class="text-gray-600"><strong>Creado:</strong>
            <%= tarea.fechaCreacion.toLocaleDateString() %>
        </p>
        <div class="mt-4 flex space-x-2">
            <a href="/tareas/<%= tarea._id %>/editar" class="bg-yellow-500 text-white px-3 py-1 rounded">Editar</a>
            <form action="/tareas/<%= tarea._id %>?_method=DELETE" method="POST">
                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded">Eliminar</button>
            </form>
            <a href="/tareas" class="bg-gray-500 text-white px-3 py-1 rounded">Volver</a>
        </div>
    </div>